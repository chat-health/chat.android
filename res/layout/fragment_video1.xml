<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/v1title"
        style="@style/titleContainer"
        android:text="Videos" />
    
    <ScrollView
        android:layout_width="match_parent"
	    android:layout_height="310dp"
	    android:layout_below="@id/v1title"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="30dp">
        <TextView
	        android:id="@+id/v1content1"
	        style="@style/shortTextContainer"
	        android:text="Some stuff" />
    </ScrollView>
    
    <HorizontalScrollView
        android:layout_width="match_parent"
	    android:layout_height="150dp"
	    android:layout_alignParentBottom="true" >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal" >
	        
	        <LinearLayout
	            android:layout_width="280dp"
	        	android:layout_height="match_parent"
	        	android:gravity="center"
	        	android:orientation="vertical">
		        <ImageView
			        android:id="@+id/v1videoImage1"
			        style="@style/videoImage"
			        android:onClick="playVideo" />
			    <TextView
			        android:id="@+id/v1videoText1"
			        style="@style/videoTextBox"/>
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="280dp"
	        	android:layout_height="match_parent"
	        	android:gravity="center"
	        	android:orientation="vertical">
		        <ImageView
			        android:id="@+id/v1videoImage2"
			        style="@style/videoImage"
			        android:onClick="playVideo" />
			    <TextView
			        android:id="@+id/v1videoText2"
			        style="@style/videoTextBox" />
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="280dp"
	        	android:layout_height="match_parent"
	        	android:gravity="center"
	        	android:orientation="vertical">
		        <ImageView
			        android:id="@+id/v1videoImage3"
			        style="@style/videoImage"
			        android:onClick="playVideo" />
			    <TextView
			        android:id="@+id/v1videoText3"
			        style="@style/videoTextBox" />
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="280dp"
	        	android:layout_height="match_parent"
	        	android:gravity="center"
	        	android:orientation="vertical">
		        <ImageView
			        android:id="@+id/v1videoImage4"
			        style="@style/videoImage"
			        android:onClick="playVideo" />
			    <TextView
			        android:id="@+id/v1videoText4"
			        style="@style/videoTextBox" />
	        </LinearLayout>
	    </LinearLayout>        
    </HorizontalScrollView>
</RelativeLayout>
