<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/button_video_1"
        android:contentDescription="@string/button_video_1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/button_video_2"
        android:layout_marginLeft="109dp"
        android:background="@null"
        android:onClick="playVideo"
        android:src="@drawable/video1btn" />
    
    <ImageButton
        android:id="@+id/button_video_2"
        android:contentDescription="@string/button_video_2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="191dp"
        android:layout_marginTop="134dp"
        android:background="@null"
        android:onClick="playVideo"
        android:src="@drawable/video2btn" />

</RelativeLayout>
