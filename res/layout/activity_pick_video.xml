<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center" >

    <ImageButton
        android:id="@+id/button_video_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@null"
        android:contentDescription="@string/button_video_1_text"
        android:onClick="playVideo"
        android:src="@drawable/video1btn" />

    <ImageButton
        android:id="@+id/button_video_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_video_1"
		
        android:background="@null"
        android:contentDescription="@string/button_video_2_text"
        android:onClick="playVideo"
        android:src="@drawable/video2btn" />

</RelativeLayout>
