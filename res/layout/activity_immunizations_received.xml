<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <TextView
        android:id="@+id/immunization_title_field"
        style="@style/titleText"
        android:gravity="center"
        android:layout_marginBottom="20dp" />
    
<!--    	<ListView
        android:id="@+id/immunization_listview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/immunization_title_field"
        android:padding="10dp" /> -->
        
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/immunization_title_field"
        android:orientation="vertical" >
                
	    <LinearLayout
	        android:id="@+id/vaccine1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	      	<TextView
		        android:id="@+id/vaccine_age1"
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:padding="10dp"
		        android:textSize="24sp" />
	        <TextView
		        android:id="@+id/vaccine_name1"
		        android:layout_width="400dp"
		        android:layout_height="wrap_content"
		        android:padding="10dp"
		        android:textSize="21sp" />
	        <Button
	            android:id="@+id/vaccine_date_select1"
			    android:layout_width="140dp" 
			    android:layout_height="wrap_content"
			    android:text="Date received"
			    android:onClick="showDatePickerDialog" />
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/vaccine2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	      	<TextView
		        android:id="@+id/vaccine_age2"
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:padding="10dp"
		        android:textSize="24sp" />
	        <TextView
		        android:id="@+id/vaccine_name2"
		        android:layout_width="400dp"
		        android:layout_height="wrap_content"
		        android:padding="10dp"
		        android:textSize="21sp" />
	        <Button
	            android:id="@+id/vaccine_date_select2"
			    android:layout_width="140dp" 
			    android:layout_height="wrap_content"
			    android:text="Date received"
			    android:onClick="showDatePickerDialog" />
	    </LinearLayout>	    
	    
	    
	    
	    
	    
	</LinearLayout>
   	
   	<Button 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true"
	    android:text="Done" 
	    android:onClick="completeImmunizationReceived" />
    
</RelativeLayout>
