<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >
    
	<ImageView 
		android:id="@+id/chatLogo"
		android:layout_width="375dp"
		android:layout_height="417dp"
		android:layout_marginLeft="100dp"
		android:layout_marginTop="50dp"
		android:src="@drawable/loginlogo" />

    <LinearLayout
        android:id="@+id/setup_visit"
        style="@style/LoginFormContainer"
        android:orientation="vertical"
        android:layout_marginLeft="300dp"
        android:layout_marginBottom="190dp" > 
        
        <Spinner
		    android:id="@+id/household_spinner"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="24dp" />

        <Spinner
   			android:id="@+id/visit_type_spinner"
   			android:layout_width="fill_parent"
   			android:layout_height="wrap_content"
   			android:layout_marginBottom="24dp" />
        
        <ImageButton
            android:id="@+id/get_gps_button"
            android:layout_width="289dp"
            android:layout_height="69dp"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"
            android:src="@drawable/getgpslocationbutton" />
        
        <ImageButton
	        android:id="@+id/new_visit_button"
	        android:layout_width="290dp"
	        android:layout_height="69dp"
            android:layout_gravity="right"
            android:layout_marginTop="200dp"
			android:src="@drawable/startnewvisitbutton" />
           
    </LinearLayout>
    


</LinearLayout>