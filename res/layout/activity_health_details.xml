	            android:text="@string/health_sub_title_text" />
	        <View
	            android:id="@+id/health_sub4_divider"
	            style="@style/titleDivider"
	            android:background="@color/chat"
	            android:layout_below="@id/health_sub4_title_field" />
	        <ImageView
		        android:id="@+id/health_sub4_button_img"
		        style="@style/topicImage"
		        android:layout_below="@id/health_sub4_title_field"
		        android:layout_marginTop="20dp"
		        android:src="@drawable/children_play_screenshot"
		        android:onClick="openHealthDelivery" />
	       	<ImageButton
	       	    android:id="@+id/health_sub4_button"
	       	    style="@style/topicImageButton"
	       	    android:layout_alignTop="@+id/health_sub4_button_img"
	       	    android:layout_toRightOf="@+id/health_sub4_button_img"
	       	    android:layout_marginLeft="60dp"
	       	    android:layout_marginTop="40dp"
	       	    android:src="@drawable/children_play_btn_zulu"
	       	    android:onClick="openHealthDelivery" />   
		</RelativeLayout>
	    
	</TableRow>
</TableLayout>