<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >
    
    <ImageView 
		android:id="@+id/chatLogo"
		android:layout_width="375dp"
		android:layout_height="417dp"
		android:layout_marginLeft="100dp"
		android:layout_marginTop="50dp"
		android:src="@drawable/loginlogo" />

   <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp" >
	  	<ImageButton
		    android:id="@+id/resume_visit_button"
		    android:layout_width="290dp"
		    android:layout_height="69dp"
		    android:paddingLeft="32dp"
		    android:paddingRight="32dp"
		    android:src="@drawable/resumevisitbutton"
		    android:onClick="resumeVisit" />
	 	<ImageButton
	        android:id="@+id/set_up_new_visit_button"
	        android:layout_width="290dp"
			android:layout_height="69dp"
			android:layout_marginTop="70dp"
			android:src="@drawable/setupnewvisitbutton"
			android:onClick="openNewVisitWarning" />        
    </LinearLayout>

</LinearLayout>
