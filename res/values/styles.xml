<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
	
    <style name="homeContainer">
	    <item name="android:layout_width">560dp</item>
	    <item name="android:layout_height">600dp</item>
	    <item name="android:padding">25dp</item>
	</style>
	
    <style name="servicesContainer">
	    <item name="android:layout_width">700dp</item>
	    <item name="android:layout_height">600dp</item>
	    <item name="android:background">#FFFFFF</item>
	    <item name="android:padding">25dp</item>
	</style>
	
    <style name="healthContainer">
	    <item name="android:layout_width">1000dp</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:background">#f5f5f5</item>
	</style>
	
	<style name="titleText">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">50dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">6dp</item>
	</style>
	
	<style name="serviceTypeTitle">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">50dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:padding">6dp</item>
	</style>
	
	<style name="titleDivider">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">2dp</item>
	</style>

	<style name="topicImage">
	    <item name="android:layout_width">200dp</item>
	    <item name="android:layout_height">140dp</item>
        <item name="android:contentDescription">@string/generic_img_button_text</item>
	</style>
	
	<style name="serviceTypeImage">
	    <item name="android:layout_width">200dp</item>
	    <item name="android:layout_height">200dp</item>
        <item name="android:contentDescription">@string/generic_img_button_text</item>
	</style>
	
	<style name="topicImageButton">
	    <item name="android:layout_width">140dp</item>
	    <item name="android:layout_height">60dp</item>
        <item name="android:background">@null</item>
        <item name="android:contentDescription">@string/generic_img_button_text</item>
	</style>
	
	<style name="otherServiceTitle">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginTop">15dp</item>
	    <item name="android:textSize">19sp</item> 
	</style>
	
	<style name="otherServiceTextEntry">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>  
	</style>
		
