<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
	
    <style name="attendanceContainer">
	    <item name="android:layout_width">500dp</item>
	    <item name="android:layout_height">640dp</item>
	    <item name="android:padding">20dp</item>
	</style>
	
    <style name="branchContainer">
	    <item name="android:layout_width">340dp</item>
	    <item name="android:layout_height">310dp</item>
	    <item name="android:padding">10dp</item>
	</style>
	
    <style name="servicesContainer">
	    <item name="android:layout_width">700dp</item>
	    <item name="android:layout_height">600dp</item>
	    <item name="android:background">#FFFFFF</item>
	    <item name="android:padding">25dp</item>
	</style>
	
    <style name="healthContainer">
	    <item name="android:layout_width">1000dp</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:background">#f5f5f5</item>
	</style>
	
	<style name="titleText">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">50dp</item>
	    <item name="android:padding">6dp</item>
	    <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
	</style>
	
	<style name="titleDivider">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">2dp</item>
	</style>
	
	<style name="branchImage">
	    <item name="android:layout_width">150dp</item>
	    <item name="android:layout_height">150dp</item>
	</style>
	
	<style name="branchImageButton">
	    <item name="android:layout_width">70dp</item>
	    <item name="android:layout_height">30dp</item>
        <item name="android:background">@null</item>
	</style>
	
	<style name="serviceTypeTitle">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">50dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:padding">6dp</item>
	</style>

	<style name="themeImage">
	    <item name="android:layout_width">200dp</item>
	    <item name="android:layout_height">140dp</item>
        <item name="android:contentDescription">@string/generic_img_button_text</item>
	</style>
	
	<style name="serviceTypeImage">
	    <item name="android:layout_width">200dp</item>
	    <item name="android:layout_height">200dp</item>
        <item name="android:contentDescription">@string/generic_img_button_text</item>
	</style>
	
	<style name="themeImageButton">
	    <item name="android:layout_width">140dp</item>
	    <item name="android:layout_height">60dp</item>
        <item name="android:background">@null</item>
        <item name="android:contentDescription">@string/generic_img_button_text</item>
	</style>
	
	<style name="checkmarkImage">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginLeft">60dp</item>
	</style>
	
	<style name="otherServiceTitle">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginTop">15dp</item>
	    <item name="android:textSize">19sp</item> 
	</style>
	
	<style name="otherServiceTextEntry">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>  
	</style>
		
	<!-- styles used in the health/pages layouts -->
	<style name="titleContainer">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">36sp</item>
	    <item name="android:textStyle">bold</item>
	</style>
	
	<style name="shortTextContainer">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">28sp</item>
	</style>
	<!-- <item name="android:lineSpacingMultiplier">1.4</item>   -->
	<style name="healthRadioGroup">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item> 
	</style>
	
	<style name="healthRadioButton">
	    <item name="android:layout_width">800dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_margin">8dp</item>
	    <item name="android:textSize">28sp</item>	    
	</style>
	
	<style name="healthImage">
	    <item name="android:layout_width">360dp</item>
	    <item name="android:layout_height">240dp</item>
	</style>
	
	<style name="videoTextBox">
	    <item name="android:layout_width">200dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textSize">18sp</item>
	</style>
	
	<style name="immunizationAgeTextBox">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item> 
	    <item name="android:layout_marginLeft">120dp</item>
	    <item name="android:layout_marginTop">20dp</item>
	    <item name="android:layout_marginBottom">10dp</item>
	    <item name="android:textSize">36sp</item>
	    <item name="android:textColor">#7DD1D0</item>
	</style>
	
	<style name="immunizationFlagBox">
	    <item name="android:layout_width">120dp</item>
	    <item name="android:layout_height">wrap_content</item> 
	</style>
	
	<style name="immunizationShortNameTextBox">
	    <item name="android:layout_width">250dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">10dp</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:textSize">26sp</item>
	</style>
	
	<style name="immunizationLongNameTextBox">
	    <item name="android:layout_width">660dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">10dp</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:textSize">18sp</item>
	</style>

	<style name="immunizationDateButton">
	    <item name="android:layout_width">250dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:text">Date received</item>
	    <item name="android:onClick">showDatePickerDialog</item>
	</style>
	
	<style name="vaccineSummaryContainer">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">28sp</item>
	    <item name="android:layout_marginTop">30dp</item>
	    <item name="android:layout_marginLeft">40dp</item>
	</style>
	
</resources>

