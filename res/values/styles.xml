<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
	
    <style name="homeContainer">
	    <item name="android:layout_width">500dp</item>
	    <item name="android:layout_height">600dp</item>
	    <item name="android:padding">25dp</item>
	</style>
	
    <style name="servicesContainer">
	    <item name="android:layout_width">700dp</item>
	    <item name="android:layout_height">600dp</item>
	    <item name="android:background">#FFFFFF</item>
	    <item name="android:padding">25dp</item>
	</style>
	
	<style name="titleText">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">50dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#65E3E6</item>
        <item name="android:padding">6dp</item>
	</style>
	
	<style name="titleDivider">
	    <item name="android:background">#65E3E6</item>
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">2dp</item>
	</style>

	<style name="topicImage">
	    <item name="android:layout_width">200dp</item>
	    <item name="android:layout_height">140dp</item>
        <item name="android:contentDescription">@string/generic_img_button_text</item>
	</style>
	
	<style name="topicImageButton">
	    <item name="android:layout_width">140dp</item>
	    <item name="android:layout_height">60dp</item>
        <item name="android:background">@null</item>
        <item name="android:contentDescription">@string/generic_img_button_text</item>
	</style>
	
	<style name="smallButton">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#33CCCC</item>	    
	</style>
	

	
</resources>

